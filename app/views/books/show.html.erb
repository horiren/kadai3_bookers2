<body>
  <main>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/users', {book: @book, user: @user} %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td></td>
                
                  <td>
                    <% if @user.profile_image.attached? %>
                      <%= link_to user_path(@user.id) do%>
                        <%= image_tag @user.profile_image, size: "100x100" %><br>
                        <%= @user.name %>
                      <% end %>
                    <% else %>
                      <%= link_to user_path(@user.id) do%>
                        <%= image_tag 'doraemon.png', size: "100x100" %><br>
                        <%= @user.name %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <span>
                      <%= link_to @book.title, book_path(@book.id) %>
                    </span>
                  </td>
                  <td>
                    <p><%= @book.body %></p>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
                  </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>